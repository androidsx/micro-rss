<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
			android:title="Choose your feeds">
	        <Preference
               	android:title="Sample feeds"
                android:summary=""
                android:key="chooseSampleFeeds"
                android:layout="@layout/preferences_row" />
                
            <Preference
                android:title="Google Reader feeds"
                android:summary=""
                android:key="chooseGoogleReaderFeeds"
                android:layout="@layout/preferences_row" />
                
        </PreferenceCategory>
        
       <PreferenceCategory
                android:title="Advanced">
			
                <Preference
                        android:title="Google Reader Account"
                        android:summary=""
                        android:key="googleReaderAccount"
                        android:layout="@layout/preferences_row" />
                        
                <Preference
                        android:title="Sync stories"
                        android:summary=""
                        android:key="syncStories"
                        android:layout="@layout/preferences_row" />
                        
                <ListPreference
                    android:key="@string/pref_update_interval"
                    android:title="Update interval"
                    android:entries="@array/update_interval"
                    android:entryValues="@array/update_interval_values"
                    android:defaultValue="21600000"
                    android:dialogTitle="Update the stories every"
                    android:layout="@layout/preferences_row"
                    android:enabled="false" />
        </PreferenceCategory>
        
</PreferenceScreen>