<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="?android:attr/listPreferredItemHeight"
  android:padding="6dip"
  android:background="@drawable/grey_to_white_gradient">
  
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="0dip"
    android:layout_weight="1"
    android:layout_height="fill_parent">
    
    <TextView
      android:id="@+id/title_list_mode_row"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center_vertical"

      style="@style/TitleRowListViewLisMode" />
      
    <TextView
      android:id="@+id/description_list_mode_row"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      style="@style/DescriptionRowListViewLisMode" />
      
    <TextView
      android:id="@+id/pubdate_list_mode_row"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="right"
      style="@style/TimestampRowListViewLisMode"
      />
  </LinearLayout>
  
</LinearLayout>