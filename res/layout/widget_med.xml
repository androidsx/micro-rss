<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="1dip"
  android:focusable="true">

  <RelativeLayout
    android:id="@+id/widget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="4dip"
    android:layout_marginRight="4dip"
    android:layout_marginTop="2dip"
    android:layout_marginBottom="4dip"
    android:focusable="true"
    style="@style/WidgetBackground">

    <TextView
      android:id="@+id/location"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:includeFontPadding="false"
      android:singleLine="true"
      android:ellipsize="end"
      android:visibility="gone"
      
      style="@style/Text.Location" />

    <ImageButton
      android:id="@+id/update_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"

      style="@style/ImageWidget"
      android:layout_alignParentRight="true"
      android:src="@drawable/appwidget_refresh" 
      
       android:scaleType="fitXY"
      android:layout_alignRight="@id/location"
       />
       
    <TextView
      android:id="@+id/conditions"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:includeFontPadding="false"
      android:lineSpacingMultiplier="0.9"
      android:lines="4"
      style="@style/Text.Conditions" />

    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_below="@id/conditions"
      android:singleLine="true">

      <ImageButton
        android:id="@+id/prev_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="center"

        android:paddingLeft="5dip"
        android:paddingRight="15dip"
        android:paddingTop="5dip"

        android:src="@drawable/appwidget_prev" />

      <ImageButton
        android:id="@+id/next_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="center"

        android:paddingTop="5dip"

        android:src="@drawable/appwidget_next" />

      <!-- Empty text view to put the title in the right -->
      <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="1"
        text="" />


      <TextView
        android:id="@+id/feedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="0"
        style="@style/Text.FeedTitle" />

    </LinearLayout>

  </RelativeLayout>

</RelativeLayout>

