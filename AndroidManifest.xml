<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidsx.microrss"
    android:versionName="2.3.2" android:versionCode="18">

    <uses-sdk android:minSdkVersion="3" />

    <application android:icon="@drawable/app_icon" android:label="@string/app_name" android:description="@string/app_descrip">

        <provider android:name="com.androidsx.microrss.db.AnyRssContentProvider" android:authorities="com.androidsx.microrss" />
        <service android:name="com.androidsx.microrss.UpdateService" />

        <receiver android:name="com.androidsx.microrss.MedAppWidget" android:label="@string/label_med">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.androidsx.microrss.UPDATE_FEED"/>
                <action android:name="com.androidsx.microrss.SHOW_NEXT_ITEM"/>
                <action android:name="com.androidsx.microrss.SHOW_PREV_ITEM"/>
                <action android:name="com.androidsx.microrss.SHOW_PREV_ITEM_ALARM"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_med" />
        </receiver>
        
        <receiver android:name="com.androidsx.microrss.TinyAppWidget" android:label="@string/label_tiny">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.androidsx.microrss.tiny.UPDATE_FEED"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_tiny" />
        </receiver>
        

        <activity
            android:name="com.androidsx.microrss.InfoActivity"
            android:label="@string/title_info"
            android:theme="@android:style/Theme.Dialog">
        </activity>
       
        <activity
            android:name="com.androidsx.microrss.configure.SettingsActivity"
            android:label="@string/settings_title">
        </activity>
        
        <!-- new activities since huge refactoring -->
        <activity android:name="com.androidsx.microrss.RetrieveRssItemsActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar"> 
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        
        </activity>
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssAppListModeActivity"/>
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssAppItemModeActivity"/>
        
        <activity
            android:name="com.androidsx.microrss.configure.ConfigureActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Original AnyRSS extended view activities -->
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssItemModeActivity"/>
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssListModeActivity"/>
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssExpandableModeActivity"/>
        
        <!-- activity that dispatches to one of the extended view activities -->
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.DetailsViewChooser"/>
        
        <!-- library project application info -->
		<activity android:name="com.androidsx.commons.appinfo.HelpActivity"/>
		<activity android:name="com.androidsx.commons.appinfo.AboutUsActivity" />
		<activity android:name="com.androidsx.commons.appinfo.BlogActivity" />
		<activity android:name="com.androidsx.commons.appinfo.AppInfoActivity" />
		<activity android:name="com.androidsx.commons.appinfo.ChangelogActivity" />     
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
