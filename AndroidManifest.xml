<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidsx.microrss"
    android:versionName="2.3.2" android:versionCode="18">

    <uses-sdk android:minSdkVersion="7" />

    <application android:icon="@drawable/app_icon" android:label="@string/app_name" android:description="@string/app_descrip">

        <provider android:name="com.androidsx.microrss.db.MicroRssContentProvider" android:authorities="com.androidsx.microrss" />
        <service android:name="com.androidsx.microrss.UpdateService" />

        <activity
            android:name="com.androidsx.microrss.configure.SettingsActivity"
            android:label="@string/settings_title">
        </activity>
        
        <activity android:name="InitActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar"> 
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssAppListModeActivity"/>
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssAppItemModeActivity"/>
        
        <!-- Original AnyRSS extended view activities -->
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssItemModeActivity"/>
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssListModeActivity"/>
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.AnyRssExpandableModeActivity"/>
        
        <!-- activity that dispatches to one of the extended view activities -->
        <activity android:theme="@android:style/Theme.Dialog" android:name="com.androidsx.microrss.view.DetailsViewChooser"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
